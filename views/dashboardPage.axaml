<UserControl
    x:Class="ProjectManager.views.dashboardPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:ProjectManager.ViewModels"
    x:DataType="vm:DashboardViewModel">

    <StackPanel Margin="20">
        <!--  Welcome message  -->
        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Text="{x:Bind Username}" />

        <!--  Tasks List  -->
        <ItemsControl Items="{x:Bind Tasks}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:TaskItemViewModel">
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Width="150" Text="{x:Bind title}" />
                        <TextBlock Width="250" Text="{x:Bind description}" />
                        <TextBlock Width="100" Text="{x:Bind status}" />
                        <TextBlock Width="50" Text="{x:Bind progress}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
